RewriteEngine on

RewriteRule ^([a-zA-Z0-9-]+)$ index.php?action=$1
RewriteRule ^([a-zA-Z0-9-]+)/$ index.php?action=$1
RewriteRule ^([a-zA-Z0-9-]+)/([a-zA-Z0-9-]+)$ index.php?action=$1&arg1=$2
RewriteRule ^([a-zA-Z0-9-]+)/([a-zA-Z0-9-]+)/$ index.php?action=$1&arg1=$2
RewriteRule ^([a-zA-Z0-9-]+)/([a-zA-Z0-9-]+)/([a-zA-Z0-9-]+)$ index.php?action=$1&arg1=$2&arg2=$3
RewriteRule ^([a-zA-Z0-9-]+)/([a-zA-Z0-9-]+)/([a-zA-Z0-9-]+)/$ index.php?action=$1&arg1=$2&arg2=$3

